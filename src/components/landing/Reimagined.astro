<script>
    const slider = document.getElementById('reim-slider');
    if (slider) {
        const track = slider.querySelector('#reim-track');
        const dots = Array.from(slider.querySelectorAll('[role="tab"]'));
        const total = dots.length;
        let index = 0;
        let startX = 0;
        let currentX = 0;
        let isDragging = false;

        const update = () => {
            if (!(track instanceof HTMLElement)) return;
            track.style.transform = `translateX(-${index * 100}%)`;
            dots.forEach((d, i) => {
                d.setAttribute('aria-selected', String(i === index));
                d.className = `h-2 w-2 rounded-full ${i === index ? 'bg-white/90' : 'bg-white/40'}`;
            });
        };

        dots.forEach((btn) => {
            btn.addEventListener('click', () => {
                const i = Number(btn.getAttribute('data-index'));
                if (!Number.isNaN(i)) {
                    index = i;
                    update();
                }
            });
        });

        const onTouchStart = (e) => {
            isDragging = true;
            startX = e.touches[0].clientX;
            currentX = startX;
        };
        const onTouchMove = (e) => {
            if (!isDragging) return;
            currentX = e.touches[0].clientX;
        };
        const onTouchEnd = () => {
            if (!isDragging) return;
            const delta = currentX - startX;
            const threshold = 40;
            if (delta < -threshold && index < total - 1) index += 1;
            if (delta > threshold && index > 0) index -= 1;
            isDragging = false;
            update();
        };

        track?.addEventListener('touchstart', onTouchStart, { passive: true });
        track?.addEventListener('touchmove', onTouchMove, { passive: true });
        track?.addEventListener('touchend', onTouchEnd, { passive: true });

        update();
    }
</script>
