        action="https://sportfx.us6.list-manage.com/subscribe/post?u=7f78ce6d1c9d2cd98472007f2&id=4c2a891359&f_id=005bcce2f0"
        method="post"
        id="mc-embedded-subscribe-form"
        name="mc-embedded-subscribe-form"
        class="validate"
        target="_blank"
      >
        <div id="mc_embed_signup_scroll">
          <div class="mc-field-group">
            <input
              type="text"
              name="MMERGE12"
