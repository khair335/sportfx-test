---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["mailchimp-waitlist-wrapper w-full", className]}>
  <!-- Mailchimp Embed Code -->
  <div id="mc_embed_shell">
    <link
      href="//cdn-images.mailchimp.com/embedcode/classic-061523.css"
      rel="stylesheet"
      type="text/css"
    />
    <style type="text/css">
    #mc_embed_signup form{
      margin: 20px 0;
    }
      #mc_embed_signup {
        background: transparent;
        clear: left;
        font:
          20px Geist,
          sans-serif;
      }
      /* Add your own Mailchimp form style overrides in your site stylesheet or in this style block.
           We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
      #mc_embed_signup .mc-field-group {
        width: 100%;
        height: 48px;
        margin-bottom: 20px;
        border-radius: 8px;
        background-color: #404041 !important;
      }
      #mc_embed_signup #mc-embedded-subscribe ,
      #mc_embed_signup .mc-field-group input::placeholder,
      #mc_embed_signup .mc-field-group input,
      #mc_embed_signup .mc-field-group select {
        height: 48px;
        padding: 10px;
        background-color: #404041 !important;
        border: none;
        border-radius: 8px;
        color: #fff;
        font-size: 20px;


      }
      #mc_embed_signup .button {
        width: 100%;
        height: 3rem;
        background-color: #262626;
        color: #00ffb7;
        font-size: 1.25rem;
        padding: 10px;
        border-radius: 0.5rem;
        border: none;
        cursor: pointer;
        font-weight: 400;
        transition: all 0.3s ease;
        font-family: Geist, sans-serif;
      }
      #mc_embed_signup .select-field {
        width: 100%;
        padding: 10px;
        background-color: #f2f2f3;
        border: none;
        border-radius: 10px;
        margin-bottom: 1rem;
      }
      #mc_embed_signup .email-field {
        width: 100%;
        background-color: #f2f2f3;
        border: none;
        border-radius: 10px;
        margin-bottom: 1rem;
      }
      #mc_embed_signup #mce-success-response {
        width: 100%;
        text-align: center;
        margin: 0;
        padding: 0.5rem 0 1rem 0;
        font-size: 20px;
        font-weight: 400;
        color: #0ec893;
      }
      #mc_embed_signup #mce-error-response {
        width: 100%;
        text-align: center;
        margin: 0;
        padding: 0.5rem 0 1rem 0;
      }
    </style>
    <div id="mc_embed_signup">
      <form
        action="https://sportfx.us6.list-manage.com/subscribe/post?u=7f78ce6d1c9d2cd98472007f2&id=4c2a891359&f_id=0054cce2f0"
        method="post"
        id="mc-embedded-subscribe-form"
        name="mc-embedded-subscribe-form"
        class="validate"
        target="_blank"
      >
        <div id="mc_embed_signup_scroll">
          <div class="mc-field-group">
            <select name="MMERGE10" class="select-field" id="mce-MMERGE10"
              ><option value="">Select primary sport</option><option
                value="Baseball">Baseball</option
              ><option value="Softball">Softball</option><option
                value="Field Hockey">Field Hockey</option
              ><option value="Basketball">Basketball</option><option
                value="Football">Football</option
              ><option value="Swimming">Swimming</option><option value="Other"
                >Other</option
              ></select
            >
          </div><div class="mc-field-group">
            <select name="MMERGE11" class="select-field" id="mce-MMERGE11"
              ><option value="">I am a(n)...</option><option value="Athlete"
                >Athlete</option
              ><option value="Parent/Guardian of an athlete"
                >Parent/Guardian of an athlete</option
              ><option value="Coach or Trainer">Coach or Trainer</option><option
                value="Other">Other</option
              ></select
            >
          </div><div class="mc-field-group">
            <input
              type="email"
              name="EMAIL"
              class="email-field"
              id="mce-EMAIL"
              required=""
              value=""
              placeholder="Type your email"
            />
          </div>
          <!--Tags section -->
          <div hidden="">
            <input type="hidden" name="tags" value="3399575" />
          </div>
          <div id="mce-responses" class="clear">
            <div
              class="response"
              id="mce-error-response"
              style="display: none;"
            >
            </div>
            <div
              class="response"
              id="mce-success-response"
              style="display: none;"
            >
            </div>
          </div>
          <div aria-hidden="true" style="position: absolute; left: -5000px;">
            <input
              type="text"
              name="b_7f78ce6d1c9d2cd98472007f2_4c2a891359"
              tabindex="-1"
              value=""
            />
          </div><div class="clear">
            <input
              type="submit"
              name="subscribe"
              id="mc-embedded-subscribe"
              class="button"
              value="Reserve Your Access"
            />
          </div>
        </div>
      </form>
    </div>
    <script
      type="text/javascript"
      src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"
    ></script><script type="text/javascript">
      (function ($) {
        window.fnames = new Array();
        window.ftypes = new Array();
        fnames[10] = "MMERGE10";
        ftypes[10] = "dropdown";
        fnames[11] = "MMERGE11";
        ftypes[11] = "dropdown";
        fnames[0] = "EMAIL";
        ftypes[0] = "email";
        fnames[1] = "FNAME";
        ftypes[1] = "text";
        fnames[2] = "LNAME";
        ftypes[2] = "text";
        fnames[3] = "ADDRESS";
        ftypes[3] = "address";
        fnames[4] = "PHONE";
        ftypes[4] = "phone";
        fnames[5] = "BIRTHDAY";
        ftypes[5] = "birthday";
        fnames[6] = "COMPANY";
        ftypes[6] = "text";
        fnames[7] = "MMERGE7";
        ftypes[7] = "dropdown";
        fnames[8] = "MMERGE8";
        ftypes[8] = "dropdown";
        fnames[9] = "MMERGE9";
        ftypes[9] = "text";
        fnames[12] = "MMERGE12";
        ftypes[12] = "text";
      })(jQuery);
      var $mcj = jQuery.noConflict(true);
    </script>
  </div>
</div>
